<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bg1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="245dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgBanan"
            android:scaleType="centerCrop"
            android:src="@drawable/cafe"
            android:layout_width="match_parent"
            android:layout_height="130dp" />
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:text="Bàn 201"
            android:layout_below="@+id/imgBanan"
            android:id="@+id/tvNhaHangBa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/LLayout"
            android:layout_margin="5dp"
            android:layout_below="@+id/tvNhaHangBa"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/tvNameBan"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="Capuchino"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/tvSoNguoi"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="50000 vnđ"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Đặt bàn"
            android:background="@drawable/btn_login"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_below="@+id/LLayout"
            android:id="@+id/btnDatbanan"
            android:layout_width="242dp"
            android:layout_height="30dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>