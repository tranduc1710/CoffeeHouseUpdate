<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="3dp">

    <RelativeLayout
        android:background="@drawable/bg1"
        android:layout_width="245dp"
        android:layout_margin="5dp"
        android:layout_height="245dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgItem1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banhkem" />
        <TextView
            android:paddingLeft="72dp"
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgItem1"
            android:layout_marginTop="5dp"
            android:text="Bàn số:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView

            android:layout_toRightOf="@id/tv1"
            android:id="@+id/tvItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgItem1"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="102"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_toLeftOf="@id/imgsaoden2"
            android:id="@+id/imgsaoden1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvItem1"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_sao_den" />

        <ImageView
            android:layout_toLeftOf="@id/imgsaoden3"
            android:id="@+id/imgsaoden2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvItem1"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_sao_den" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/imgsaoden3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvItem1"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_sao_den" />

        <ImageView
            android:layout_toRightOf="@id/imgsaoden3"
            android:id="@+id/imgsaoden4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvItem1"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_sao_den" />

        <ImageView
            android:layout_toRightOf="@id/imgsaoden4"
            android:id="@+id/imgsaoden5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvItem1"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_sao_den" />

        <TextView
            android:paddingLeft="95dp"
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgsaoden1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Tầng:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_toRightOf="@id/tv3"
            android:id="@+id/tvItemDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgsaoden1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="1"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>